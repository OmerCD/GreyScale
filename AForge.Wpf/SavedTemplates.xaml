<Window x:Class="AForge.Wpf.SavedTemplates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AForge.Wpf"
        mc:Ignorable="d"
        Title="SavedTemplates" Height="300" Width="300">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="269" VerticalAlignment="Top" Width="292">
            <ListViewItem>
                <Image Source="Images/settings.png" Width="35" RenderOptions.BitmapScalingMode="HighQuality"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="ListViewItem1" Style="{StaticResource TextBlock}"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="ListViewItem2" Style="{StaticResource TextBlock}"/>
            </ListViewItem>
        </ListView>

    </Grid>
</Window>
